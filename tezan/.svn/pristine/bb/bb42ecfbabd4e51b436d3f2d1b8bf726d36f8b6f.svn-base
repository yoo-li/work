<?php/** * securitycheck:1表示不进行权限校验 */	$Create = false;	$Delete = false;	$actionmapping = array (		array('actionname' => 'ModifyAssistant','securitycheck' => '1','func'=>'ModifyAssistant','type'=>'listview'),		array('actionname' => 'ModifyProfilesAssistant','securitycheck' => '1','func'=>'ModifyProfilesAssistant','type'=>'listview'),	); 	if (!function_exists('ModifyAssistant')) {	    function ModifyAssistant(){	        global  $supplierid,$supplierusertype;					$mall_settings = XN_Query::create ( 'Content' ) ->tag('mall_settings')			    ->filter ( 'type', 'eic', 'mall_settings') 				->filter ( 'my.supplierid', '=',$supplierid)				->filter ( 'my.allowphysicalstore', '=','0')			    ->filter ( 'my.deleted', '=', '0' )				->end(1)			    ->execute ();			if ( count($mall_settings) > 0)			{		        if (isset($supplierid) && $supplierid != "" )		            return '<a href="index.php?module=Supplier_PhysicalStoreProfiles&action=ModifyAssistant" data-title="提升顾客为店员" data-height="200" data-width="450" class="btn btn-default" data-group="ids" data-icon="edit" data-toggle="doajaxchecked" data-dialog=true>提升顾客为店员</a>';		        else		            return "";			}			else			{				 return "";			}	    }	}	if (!function_exists('ModifyProfilesAssistant')) {	    function ModifyProfilesAssistant(){	        global  $supplierid,$supplierusertype;					$mall_settings = XN_Query::create ( 'Content' ) ->tag('mall_settings')			    ->filter ( 'type', 'eic', 'mall_settings') 				->filter ( 'my.supplierid', '=',$supplierid)				->filter ( 'my.allowphysicalstore', '=','0')			    ->filter ( 'my.deleted', '=', '0' )				->end(1)			    ->execute ();			if ( count($mall_settings) > 0)			{		        if (isset($supplierid) && $supplierid != "" )		            return '<a href="index.php?module=Supplier_PhysicalStoreProfiles&action=ModifyProfilesAssistant" data-title="修改顾客所属店员" data-height="200" data-width="450" class="btn btn-default" data-group="ids" data-icon="edit" data-toggle="doajaxchecked" data-dialog=true>修改顾客所属店员</a>';		        else		            return "";			}			else			{				 return "";			}	    }	}?>