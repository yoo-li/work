<?php$Create = true;$Delete = true;$MassEdit = false;$CustomMassDelete = true; if (!function_exists('checkNewMenuItem')) {	function checkNewMenuItem($module,$focus) {		$wxmenus = XN_Query::create ( 'Content' )->tag('wxmenus')								->filter ( 'type', 'eic', 'wxmenus') 								->filter ( 'my.record', '=', $focus->id) 								->filter ( 'my.parentid', '=', '0') 								->end(-1)								->execute ();		if (count($wxmenus) >=3 )		{			return '<a disabled class="btn btn-default"><span>新建一级菜单(最多三个)</span></a>';		}		else		{			return '<a data-fresh="false" data-height="300" data-width="800" data-mask="true" data-toggle="dialog"  href="index.php?module=WxSettings&amp;action=WxMenuItem&amp;wxid='.$focus->id.'" class="btn btn-default" ><span>新建一级菜单</span></a>';		}	}}if (!function_exists('checkAppMenuItem')) {	function checkAppMenuItem($module,$focus) {         return '<a data-fresh="false" data-height="240"  data-mask="true" data-toggle="dialog" href="index.php?module=WxSettings&amp;action=AppMenuItem&amp;wxid='.$focus->id.'" class="btn btn-default"><span>新建快捷菜单</span></a>';		 	}}if (!function_exists('checkSynchroWxMenus')) {	function checkSynchroWxMenus($module,$focus) { 	   return '<a data-fresh="false" data-height="240"  data-mask="true" data-toggle="dialog" href="index.php?module=WxSettings&amp;action=SynchroWxMenus&amp;wxid='.$focus->id.'" class="btn btn-default" ><span>同步微信菜单</span></a>';	}}	$actionmapping = array (	array('actionname' => 'WxMenus','securitycheck' => '1','type'=>'ajax','location'=>'bottom'),	array('actionname' => 'AppMenuItem','securitycheck' => '1','type'=>'button','func'=>'checkAppMenuItem'),	array('actionname' => 'WxMenuItem','securitycheck' => '1','type'=>'button','func'=>'checkNewMenuItem'),	array('actionname' => 'SynchroWxMenus','securitycheck' => '1','type'=>'button','func'=>'checkSynchroWxMenus'),	);?>