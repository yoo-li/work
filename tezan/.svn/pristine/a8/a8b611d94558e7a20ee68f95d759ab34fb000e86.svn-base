        $table .= '</td>';
        $table .= '<td colspan="" rowspan="">';
        $table .= $nakedprice * $quantity;
        $table .= '</td>';
        $table .= '<td colspan="" rowspan="">';
        $table .= ($nakedprice+$taxprice) * $quantity;
        $table .= '</td>';

