@font-face {
  font-family: 'iconfont';  /* project id 264504 */
  src: url('http://at.alicdn.com/t/font_ks41cbjdqdhuayvi.eot');
  src: url('http://at.alicdn.com/t/font_ks41cbjdqdhuayvi.eot?#iefix') format('embedded-opentype'),
  url('http://at.alicdn.com/t/font_ks41cbjdqdhuayvi.woff') format('woff'),
  url('http://at.alicdn.com/t/font_ks41cbjdqdhuayvi.ttf') format('truetype'),
  url('http://at.alicdn.com/t/font_ks41cbjdqdhuayvi.svg#iconfont') format('svg');
}
.iconfont{
    font-family: 'iconfont';
}
body{
    width: 6.4rem;
    margin: 0 auto;
}
.mui-off-canvas-wrap .mui-bar.mui-bar-nav{
    position: fixed!important;
    background-color: #fb3e21;
}
/*.mui-off-canvas-wrap{*/
    /*overflow-y: scroll;*/
/*}*/
/*.mui-scroll-wrapper{*/
    /*padding-top: 44px;*/
    /*overflow:auto;*/
/*}*/
.mui-bar-nav.mui-bar .mui-icon{
    color: #fff;
    font-weight: bold;
}
.mui-bar-tab .iconfont{
    display: inline-block;
    top: 3px;
    width: 24px;
    height: 24px;
    padding-top: 0;
    padding-bottom: 0;
    font-size: 24px;
}
a.message{
    font-size: 10px;
    line-height: 18px;
    color: #fff;
}
.mui-bar-nav{
    background: #fb3e21;
}
.mui-bar-nav.mui-bar .mui-icon.mui-icon-chat{
    padding: 6px 0 0 13px;
    font-size: 16px;
    font-weight: 100;
}
/*header .mui-icon .mui-badge{
    top: 2px;
    left: inherit;
    right: 0;
}*/
.mui-search {
    position: absolute;
    width: 70%;
    top: 2px;
    left: 15%;
    clear: none;
}
.mui-search .mui-placeholder{
    text-align: left;
    padding-right: 10px;
    top: 4px;
    color: #fff;
    font-size: 12px;
    padding-left: 10px;
}
.mui-icon-search{
    float: right;
    margin-top: -4px;
}
.mui-bar input[type=search],
.mui-search.mui-active input[type=search]{
    color: #fff;
    background-color: rgba(255,255,255,.6);
}
.mui-search.mui-active:before{
    color: #fff;
    font-weight: bold;
}
.mui-bar .mui-input-row .mui-input-clear~.mui-icon-clear{
    display: none;
}
.mui-bar-tab .mui-tab-item.mui-active{
    /*color: #fb3e21;*/
    color: #820f02;
}
.mui-slider .mui-slider-group .mui-slider-item img{
    height: 2.5rem;
}
.mui-slider-indicator .mui-indicator{
    width: 8px;
    height: 8px;
    background: #fff;
    -webkit-box-shadow: none;
    box-shadow: none;
}
.mui-slider-indicator .mui-active.mui-indicator{
    background: #fb3e21;
}
.mui-grid-view.mui-grid-9 .mui-table-view-cell{
    border: 0;
    padding: 11px 15px 0 15px;
}
.mui-grid-view.mui-grid-9 .mui-table-view-cell>a:not(.mui-btn){
    padding: 5px 0;
}
.mui-grid-view.mui-grid-9 .mui-table-view-cell>a:not(.mui-btn):hover,
.mui-grid-view.mui-grid-9 .mui-table-view-cell>a:not(.mui-btn):active{
    background: rgba(34, 34, 34, 0.21);
}
.mui-table-view-cell span{
    margin-top: 5px;
    font-size: .18rem;
    line-height: .3rem;
    text-align: center;
}
.mui-table-view-cell img{
    margin: 0 auto;
    width: .8rem;
    height: .8rem;
    display: block;
}
.mui-table-view-cell br{
    display: none;
}
.w-title{
    width: 100%;
    height: .76rem;
    padding: .23rem 0;
    color: #353738;
    text-align: center;
    font-size: .26rem;
    line-height: .3rem;
    background: url(../images/banner_bg.png) no-repeat;
    background-size: cover;
}
.w-title img{
    display: inline-block;
    width: .26rem;
    height: .26rem;
}
.activity-grid{
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}
.activity-grid img{
    width: 3.16rem;
    height: 1.8rem;
}
.activity-grid img.grid-2{
    width: 1.56rem;
    height: 2.14rem;
}

.banner{
    width: 100%;
    display: block;
}
.hot{
    width: 100%;
    background-color: #fff;
    overflow: scroll;
}
.hot-sale{
    width: 10rem;
}
.h-grid{
    float: left;
    box-sizing: border-box;
    width: 2rem;
    padding: .2rem .25rem;
}
.h-grid a.more-icon img{
    width: 1.52rem;
    height: 1.68rem;
}
p{
   margin: 0; 
}
.goods-container{
    padding: 0 .2rem;
}
.h-grid a:hover + p,
.h-grid a:active + p,
.goods-container a:hover + p,
.goods-container a:active + p{
    color: #fb3e21;
}
.h-grid p,
.goods-container p{
    font-size: .18rem;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.h-grid img{
    width: 1.5rem;
    height: 1.25rem;
}
.more{
    position: absolute;
    right: 5px;
    font-size: .18rem;
    color: #7d7e7e;
}
.more:hover,
.more:active{
    color: #fb3e21;
}
.more span{
    font-size: 14px;
    background: #d2d2d2;
    border-radius: 20px;
    padding: 2px;
    margin-left: 5px;
}
.goods{
    padding: .2rem .1rem;
    background: #fff;
}
.goods-container{
    width: 50%;
    float: left;
}
.goods-container img{
    width: 2.2rem;
    height: 2.2rem;
    margin: 0 auto;
    display: block;
}
.goods-bottom span{
    font-size: .2rem; 
}
.goods-bottom a{
    margin-left: 5px;
    display: inline-block;
}
.icon img{
    width: .3rem;
    height: .3rem;
}
.clear:after{
    content: '';
    display: block;
    clear: both;
}
.h50{
    height: 50px;
}
.red{
    color: #fb3e21;
}
.gray{
    color: #827f7f;
}